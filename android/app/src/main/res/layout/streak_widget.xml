<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Header Row: Title + Fire Emoji -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/streak_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 days streak!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/streak_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is what consistency looks like"
                android:textColor="#888888"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/fire_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥"
            android:textSize="28sp" />
    </LinearLayout>

    <!-- Progress Nodes Row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <!-- Connector Line Background -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/connector_line" />

        <!-- Nodes Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date Node -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView
                    android:id="@+id/node_date"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circle_blue" />
                
                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:text="10\njan"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </RelativeLayout>

            <!-- Running Node -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView
                    android:id="@+id/node_running"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circle_green" />
                
                <TextView
                    android:id="@+id/icon_running"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:text="ðŸƒ"
                    android:textSize="16sp"
                    android:gravity="center" />
            </RelativeLayout>

            <!-- Skating Node -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView
                    android:id="@+id/node_skating"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circle_gray" />
                
                <TextView
                    android:id="@+id/icon_skating"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:text="â›¸ï¸"
                    android:textSize="16sp"
                    android:gravity="center" />
            </RelativeLayout>

            <!-- Cycling Node -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView
                    android:id="@+id/node_cycling"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circle_gray" />
                
                <TextView
                    android:id="@+id/icon_cycling"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:text="ðŸš´"
                    android:textSize="16sp"
                    android:gravity="center" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
